pipeline {
    agent any
    
       tools {
        nodejs 'NodeJS'
        npm 'npm'
    }
    
    stages {
        stage('Checkout') {
            steps {
                git branch: 'master', url: 'https://github.com/CharithX/node-sample'
            }
        }
        
        stage('Install dependencies') {
            steps {
                sh 'npm install'
            }
        }
                
        stage('Deploy') {
            steps {
                sh 'npm start'
            }
        }
    }
}
