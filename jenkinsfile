pipeline {
    agent any

      tools {
        nodejs 'Nodejs'
    }
    
    stages {
        stage('Checkout') {
            steps {
                git branch: 'master', url: 'https://github.com/CharithX/node-sample'
            }
        }
        
        stage('Install dependencies') {
            steps {
                // Use the correct tool type for npm
                script {
                    def npmTool = tool 'npm'
                    env.PATH = "${npmTool}:${env.PATH}"
                    sh 'npm install'
                }
            }
        }
                
        stage('Deploy') {
            steps {
                sh 'npm start'
            }
        }
    }
}
